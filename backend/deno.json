{
  "tasks": {
    "dev": "deno run --env --allow-net --allow-env --allow-read --allow-sys --watch src/main.ts",
    "build": "deno compile --allow-net --allow-env --allow-read --allow-sys --output ponte-backend src/main.ts",
    "start": "deno run --env --allow-net --allow-env --allow-read --allow-sys src/main.ts",
    "migrate": "deno run --env --allow-net --allow-env --allow-read --allow-write --allow-sys src/shared/database/migrate.ts",
    "migrate:generate": "npx drizzle-kit generate --config src/shared/database/drizzle.config.ts",
    "test": "deno test --allow-net --allow-env --allow-read --allow-sys"
  },
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "strictPropertyInitialization": false
  },
  "imports": {
    "@nestjs/common": "npm:@nestjs/common@^10.4.0",
    "@nestjs/core": "npm:@nestjs/core@^10.4.0",
    "@nestjs/platform-express": "npm:@nestjs/platform-express@^10.4.0",
    "@nestjs/websockets": "npm:@nestjs/websockets@^10.4.0",
    "@nestjs/platform-socket.io": "npm:@nestjs/platform-socket.io@^10.4.0",
    "@nestjs/event-emitter": "npm:@nestjs/event-emitter@^2.1.0",
    "socket.io": "npm:socket.io@^4.7.0",
    "express": "npm:express@^4.18.0",
    "drizzle-orm": "npm:drizzle-orm@^0.33.0",
    "drizzle-orm/pg-core": "npm:drizzle-orm@^0.33.0/pg-core",
    "drizzle-orm/postgres-js": "npm:drizzle-orm@^0.33.0/postgres-js",
    "drizzle-kit": "npm:drizzle-kit@^0.24.0",
    "postgres": "npm:postgres@^3.4.0",
    "zod": "npm:zod@^3.23.0",
    "bullmq": "npm:bullmq@^5.12.0",
    "ioredis": "npm:ioredis@^5.4.0",
    "pino": "npm:pino@^9.3.0",
    "pino-pretty": "npm:pino-pretty@^11.2.0",
    "jsonwebtoken": "npm:jsonwebtoken@^9.0.0",
    "bcryptjs": "npm:bcryptjs@^2.4.3",
    "web-push": "npm:web-push@^3.6.0",
    "uuid": "npm:uuid@^10.0.0",
    "reflect-metadata": "npm:reflect-metadata@^0.2.0",
    "rxjs": "npm:rxjs@^7.8.0",
    "drizzle-orm/postgres-js/migrator": "npm:drizzle-orm@^0.33.0/postgres-js/migrator",
    "std/assert": "jsr:@std/assert@^1.0.0"
  },
  "nodeModulesDir": "auto"
}
